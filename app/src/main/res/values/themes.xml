<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="textColor">#000000</item>
        <item name="metaTextColor">#606060</item>
        <item name="bgColor">#ffffff</item>
    </style>
    <style name="GlassEffect">
        <item name="android:background">@drawable/glassbackground</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="GlassEffect0">
        <item name="android:background">@drawable/glassbackground</item>
        <item name="android:elevation">8dp</item>



    </style>
    

</resources>